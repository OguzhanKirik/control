{
  "name": "Control Exercice",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/home/oguz/control_ws",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "python.defaultInterpreterPath": "/usr/bin/python3",
        "ros.distro": "humble",
        "files.associations": {
          "*.launch": "xml",
          "*.xacro": "xml",
          "*.urdf": "xml"
        },
        "cmake.configureOnOpen": false
      },
      "extensions": [
        "ms-iot.vscode-ros",
        "ms-python.python",
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "redhat.vscode-yaml",
        "twxs.cmake"
      ]
    }
  },
  "forwardPorts": [11311],
  "mounts": [
    "source=${localWorkspaceFolder},target=/home/oguz/control_ws,type=bind"
  ],
  "remoteEnv": {
    "ROS_DOMAIN_ID": "0"
  },
  "remoteUser": "root",
  "postCreateCommand": "rosdep update",
  "postStartCommand": "source /opt/ros/humble/setup.bash && cd /home/oguz/control_ws && if [ -d src ] && [ \"$(find src -name '*.xml' -o -name 'CMakeLists.txt' | head -1)\" ]; then colcon build --symlink-install; fi"
}
